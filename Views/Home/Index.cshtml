@{
    ViewData["Title"] = "Home Page";
}

<style>
    .title {
        font-size: 3rem;
        font-weight: bold;
        color: #3498db; /* stilo hecho con IA */
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); 
        margin-top: 50px;
    }
</style>

<div class="text-center">
    <h1 class="display-4 title">Liga Pro Ecuador</h1>
   
</div>


        <style>
            body {
                background-image: url('@Url.Content("~/imagenes/balones.png")');
            }
        </style>


    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Url.Content("~/imagenes/L1.jpg")" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content("~/imagenes/L2.jpg")" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content("~/imagenes/L3.jpg")" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
